// main.js
// Placeholder for future interactivity 

// Dynamically load each section/component into the root divs

const components = [
    { id: 'header-root', path: '/src/components/header.html' },
    { id: 'hero-root', path: '/src/components/hero.html' },
    { id: 'benefits-root', path: '/src/components/benefits.html' },
    { id: 'services-root', path: '/src/components/services.html' },
    { id: 'process-root', path: '/src/components/process.html' },
    { id: 'clients-root', path: '/src/components/clients.html' },
    { id: 'testimonials-root', path: '/src/components/testimonials.html' },
    // { id: 'contact-root', path: '/src/components/contact.html' },
    { id: 'footer-root', path: '/src/components/footer.html' },
];

components.forEach(async ({ id, path }) => {
    const el = document.getElementById(id);
    if (el) {
        try {
            const res = await fetch(path);
            if (res.ok) {
                el.innerHTML = await res.text();
            } else {
                el.innerHTML = `<div style='color:red'>Failed to load ${path}</div>`;
            }
        } catch (e) {
            el.innerHTML = `<div style='color:red'>Error loading ${path}</div>`;
        }
    }
}); 